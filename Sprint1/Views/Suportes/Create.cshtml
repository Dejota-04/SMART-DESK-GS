@model Sprint1.Models.Suporte

@{
    ViewData["Title"] = "Novo Chamado";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">🎫 Novo Chamado de Suporte</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="UsuarioId" class="form-label fw-bold">Colaborador (Solicitante)</label>
                            <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId">
                                <option disabled selected>Selecione o usuário...</option>
                            </select>
                            <span asp-validation-for="UsuarioId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label fw-bold">Assunto</label>
                            <input asp-for="Titulo" class="form-control" placeholder="Ex: Dor nas costas, Ajuste de monitor..." />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descricao" class="form-label fw-bold">Descrição Detalhada</label>
                            <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva o que está sentindo ou o equipamento que precisa de ajuste."></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                            <input type="submit" value="Abrir Chamado" class="btn btn-success px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}