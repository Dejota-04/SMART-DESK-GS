@model Sprint1.Models.Suporte

@{
    ViewData["Title"] = "Excluir Chamado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">🗑️ Excluir Chamado de Suporte</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning text-center" role="alert">
                        <strong>Atenção!</strong> Você está prestes a apagar permanentemente este registro de atendimento.
                    </div>

                    <h5 class="text-muted mb-3">Resumo do Chamado:</h5>

                    <dl class="row p-3 bg-light rounded">
                        <dt class="col-sm-3">Ticket ID:</dt>
                        <dd class="col-sm-9">#@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-3">Solicitante:</dt>
                        <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Solicitante.Nome)</dd>

                        <dt class="col-sm-3">Assunto:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>