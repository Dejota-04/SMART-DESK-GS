@model Sprint1.Models.Usuario

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">📄 Detalhes: @Model.Nome</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome Completo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Perfil (Role)</dt>
                <dd class="col-sm-9"><span class="badge bg-primary">@Html.DisplayFor(model => model.Role)</span></dd>

                <hr class="my-3" />

                <dt class="col-sm-3">Modelo de Trabalho</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModeloTrabalho)</dd>

                <dt class="col-sm-3">Dados Físicos</dt>
                <dd class="col-sm-9">
                    Altura: <strong>@Model.Altura m</strong> | Peso: <strong>@Model.Peso kg</strong> | Sexo: <strong>@Model.Sexo</strong>
                </dd>

                <dt class="col-sm-3">Dispositivo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Dispositivo.Uuid)</dd>

                <dt class="col-sm-3">Cadastrado em</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>