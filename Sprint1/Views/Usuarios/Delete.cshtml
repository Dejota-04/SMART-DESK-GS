@model Sprint1.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">🗑️ Excluir Usuário</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning text-center" role="alert">
                        <strong>Atenção!</strong> Esta ação é irreversível. Tem certeza que deseja remover este colaborador?
                    </div>

                    <h5 class="text-muted mb-3">Dados do Usuário a ser removido:</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Perfil:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>

                        <dt class="col-sm-4">Dispositivo:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Dispositivo.Uuid)</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>