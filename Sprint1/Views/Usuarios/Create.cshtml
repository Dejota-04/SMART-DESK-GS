@model Sprint1.Models.Usuario

@{
    ViewData["Title"] = "Novo Usuário";
}

<div class="container mt-4">
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">+ Novo Usuário</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nome" class="form-label fw-bold"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome Completo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="SenhaHash" class="form-label fw-bold">Senha Inicial</label>
                    <input asp-for="SenhaHash" type="password" class="form-control" />
                    <span asp-validation-for="SenhaHash" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Altura" class="form-label fw-bold"></label>
                        <input asp-for="Altura" class="form-control" placeholder="1,75" />
                        <span asp-validation-for="Altura" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Peso" class="form-label fw-bold"></label>
                        <input asp-for="Peso" class="form-control" placeholder="70,0" />
                        <span asp-validation-for="Peso" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Sexo" class="form-label fw-bold"></label>
                        <select asp-for="Sexo" class="form-select" asp-items="Html.GetEnumSelectList<Sprint1.Models.SexoEnum>()"></select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="ModeloTrabalho" class="form-label fw-bold">Modelo Trabalho</label>
                        <select asp-for="ModeloTrabalho" class="form-select" asp-items="Html.GetEnumSelectList<Sprint1.Models.ModeloTrabalhoEnum>()"></select>
                        <span asp-validation-for="ModeloTrabalho" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Role" class="form-label fw-bold">Permissão</label>
                        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<Sprint1.Models.RoleEnum>()"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DispositivoId" class="form-label fw-bold">Dispositivo</label>
                        <select asp-for="DispositivoId" class="form-select" asp-items="ViewBag.DispositivoId"></select>
                    </div>
                </div>

                <div class="mt-3 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Voltar</a>
                    <input type="submit" value="Cadastrar Usuário" class="btn btn-success px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}